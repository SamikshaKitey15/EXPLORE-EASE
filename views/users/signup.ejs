<%layout("./layouts/boilerplate")%>
<br>
<div class="offset-lg-4">
    <div class="card" style="width: 30rem; height: 34rem;" >
        <h1>SignUp on ExploreEase</h1>
        <br>
        <form method="POST" action="/signup" class="needs-validation" novalidate>
            <div>
                <label for="username" class="form-label">Username*</label>
                <input name="username" id="username" placeholder="Enter the full name" type="text" class="form-control" required>
                <!-- <div class="valid-feedback">Title looks good!</div> -->
            </div>
            <br>

            <div>
                <label for="email" class="form-label">E-mail*</label>
                <input name="email" id="email" placeholder="Enter your email" type="text" class="form-control" required>
                <!-- <div class="valid-feedback">Title looks good!</div> -->
            </div>
            <br>

            <div>
                <label for="password" class="form-label">Password*</label>
                <input name="password" id="password" placeholder="Enter your password" type="password" class="form-control" required>
                <!-- <div class="valid-feedback">Title looks good!</div> -->
            </div>
            <br>

            <div>
                <label for="phone" class="form-label">Contact number</label>
                <input name="phone" id="phone" placeholder="Enter your Mobile no." type="number" class="form-control">
                <!-- <div class="valid-feedback">Title looks good!</div> -->
            </div>
            <br>
            <button class="btn btn-success">SignUp</button>
        </form>
    </div>
</div>
    